//William Mezitis

class CodeWordChecker {
    
    private int minimum;
    private int maximum;
    private String banned;
    
    public CodeWordChecker(int min, int max, String ban){
        minimum = min;
        maximum = max;
        banned = ban;
    }

    public CodeWordChecker(String restricted){
        min = 6;
        max = 20;
        banned = restricted;
    }    

    public boolean isValid(String search){
        int count;
        for (int i = 0; i < search.length(); i++){
            count++;
        }

        if (count < maximum && count > minimum && search.indexOf(banned) == -1){
            return true;
        }
    }
}
